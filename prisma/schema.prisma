// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  // For local development, DATABASE_URL defaults to "file:./prisma/dev.db"
  // For Vercel, set DATABASE_URL to your production database connection string
}

model AnonymousVoice {
  id        String   @id @default(cuid())
  message   String
  topicTags String?  // comma-separated tags (optional)
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@index([status])
}

model AdminConfig {
  id           String   @id @default("singleton")
  passwordHash String
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
}

